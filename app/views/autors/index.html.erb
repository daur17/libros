<div class="row text-center">
	<h1>Autores</h1>
	<br/>
</div>

<!--		ADD AUTOR BUTTON 		-->
<button id="addAutorBtn" class="btn btn-primary" data-toggle="modal" data-target="#autorModal">Agregar Autor</button>

<!--		ADD AUTOR MODAL WINDOW 		-->
<div class="modal fade" id="autorModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Agregar Autor</h4>
      </div>
      <form id="autorForm">
      	<div class="modal-body">
					<div class="form-group">
						<input type="text" name="nombre" class="form-control" placeholder="Nombre..."/>
					</div>
					<div class="form-group">
						<input type="text" name="descripcion" class="form-control" placeholder="Descripción..."/>	
					</div>
      	</div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
					<button class="btn btn-primary">Agregar</button>
	      </div>
			</form>
    </div>
  </div>
</div>

<!--		SHOW DETAILS AUTOR MODAL WINDOW 		-->
<div class="modal fade" id="showAutorModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Autor</h4>
      </div>
			<div id="details-autor" class="text-center"></div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>


<!--		SHOW DETAILS AUTOR TEMPLATE 		-->
<script type="text/template" id="tplShowDetailsAutor">
	<dl>
		<dt>Nombre</dt>
		<dd>{{= nombre }}</dd>
		<br/>
		<dt>Descripción</dt>
		<dd>{{= descripcion }}</dd>
	</dl>
</script>

<!--		AUTORES TABLE 		-->
<table class="table table-hover">
	<thead>
		<tr>
			<th>ID</th>
			<th>Nombre</th>
			<th>Descripcion</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody class="lista-autores">
	</tbody>
</table>

<!--		AUTORES TEMPLATE 		-->
<script type="text/template" id="tplShowAutores">
	<td>{{= id }}</td>
	<td>{{= nombre }}</td>
	<td>{{= descripcion }}</td>
	<td><button value="{{=id}}" id="showAutorBtn" class="btn btn-default" data-toggle="modal" data-target="#showAutorModal">Mostrar</button></td>
	<td><button value="{{=id}}" id="editAutorBtn" class="btn btn-warning" data-toggle="modal" data-target="#autorModal">Editar</button></td>
</script>

<!-- EDITAR AUTOR TEMPLATE -->
<script type="text/template" id="tplAutorForm">
	<div class="form-group">
		<input type="text" name="nombre" value="{{=nombre}}" class="form-control" placeholder="Nombre..."/>
	</div>
	<div class="form-group">
		<input type="text" name="descripcion" value="{{=descripcion}}" class="form-control" placeholder="Descripción..."/>	
	</div>
</script>

